{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "jsx": "react",
        "lib": ["es2017", "dom", "esnext"],
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
    },
    "include": [
        "src"
    ],
    "baseUrl": "src",
    "paths": {
        "AppComponents": "src/components",
        "AppConfig": "src/config",
        "Assets": "src/assets",
    },
    "exclude": ["node_modules", "dist"] // *** The files to not type check,why since src is specified***
}